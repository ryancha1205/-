<%= render 'partial/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="text-center">
            <span style="font-size:24px;">レンターカーを掲載する</span>
          </div>
        </div>
      
        <div class="panel-body">      
          <!-- ここからフォーム -->
          <%= form_for @listing do |f| %>
            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>種類</label>
                  <%= f.select :car_type, [["ミニバン","ミニバン"], ["ワゴン","ワゴン"], ["軽自動車","軽自動車"],["セダン","セダン"],["SUV","SUV"],["クーペ","クーペ"],["コンパクト","コンパクト"],["バン／トラック","バン／トラック"],["スポーツカー","スポーツカー"],["その他","その他"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>

            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>ブランド</label>
                  <%= f.select :car_brand, [["Toyota","Toyota"], ["Benz","Benz"], ["Nissan","Nissan"], ["Mazuda","Mazuda"], ["Honda","Honda"], ["Hyundai","Hyundai"], ["Ferrari","Ferrari"],["Kia Motors","Kia Motors"],["Volvo","Volvo"],["その他","その他"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>

            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>年式</label>
                  <%= f.select :car_years, [["2000年以前","2000年以前"], ["2001~2005","2001~2005"], ["2006~2010","2006~2010"], ["2011~2015","2011~2015"], ["2016","2016"], ["2017","2017"], ["2018","2018"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>

            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>サイズ</label>
                  <%= f.select :car_size, [["小型","小型"], ["中型","中型"], ["大型","大型"], ["超大型","超大型"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>

            <div class="actions">
              <%= f.submit "Save", class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>


